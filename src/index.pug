                textarea(data-path="global-editor/card-styles/selected/custom-css")
                .button-row
                    button(data-action="global-editor/card-style/selected/duplicate") duplicate style
                    button(data-action="global-editor/card-style/selected/delete" data-path="global-editor/card-style/selected/delete") delete style
